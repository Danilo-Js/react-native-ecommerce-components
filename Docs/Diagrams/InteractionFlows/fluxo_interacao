digraph InteractionFlowDiagram {
	rankdir=TB splines=ortho
	Cliente [label="🛒 Cliente" shape=ellipse]
	SearchBar [label="🔍 SearchBar" shape=box]
	ProductList [label="🛍️ ProductList" shape=box]
	ProductDetail [label="📦 ProductDetail" shape=box]
	ShoppingCart [label="🛒 ShoppingCart" shape=box]
	CouponCodeInput [label="🎟️ CouponCodeInput" shape=box]
	PaymentGateway [label="💳 PaymentGateway" shape=box]
	OrderConfirmation [label="✅ OrderConfirmation" shape=box]
	OrderTracking [label="🚚 OrderTracking" shape=box]
	ReviewAndRatings [label="⭐ ReviewAndRatings" shape=box]
	PaymentSystem [label="💻 Payment System" shape=folder]
	DeliverySystem [label="🚚 Delivery System" shape=folder]
	Database [label="🗄️ Database" shape=cylinder]
	Cliente -> SearchBar [label="Busca produtos"]
	SearchBar -> ProductList [label="Exibe resultados"]
	ProductList -> ProductDetail [label="Seleciona produto"]
	ProductDetail -> ShoppingCart [label="Adiciona ao carrinho"]
	ShoppingCart -> CouponCodeInput [label="Aplica cupom"]
	ShoppingCart -> PaymentGateway [label="Inicia pagamento"]
	PaymentGateway -> PaymentSystem [label="Valida pagamento"]
	PaymentGateway -> OrderConfirmation [label="Confirma pedido"]
	OrderConfirmation -> OrderTracking [label="Inicia rastreamento"]
	OrderTracking -> DeliverySystem [label="Atualiza status de entrega"]
	Cliente -> OrderTracking [label="Recebe pedido"]
	OrderTracking -> ReviewAndRatings [label="Avalia produto"]
	ShoppingCart -> Database [label="Salva itens"]
	OrderConfirmation -> Database [label="Salva pedido"]
	ReviewAndRatings -> Database [label="Salva avaliação"]
	PaymentGateway -> Cliente [label="Falha no pagamento"]
}
